<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20">
    <!-- Sidebar Section -->
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>Sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>

    <!-- Products Display Section -->
    <div class="w-[75%] flex flex-wrap gap-6 h-screen">
        <% if (typeof products !== "undefined" && products.length > 0) { %>
            <% products.forEach(function(product) { %>
                <div class="w-full sm:w-1/2 lg:w-1/3 xl:w-1/4 p-4">
                    <div class="product-card bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300">
                        <div class="image-container relative">
                            <% if (product.image) { %>
                                <img class="w-full h-56 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                            <% } else { %>
                                <img class="w-full h-56 object-cover" src="default-image.jpg" alt="No Image Available">
                            <% } %>
                            <div class="absolute top-4 right-4">
                                <a class="bg-white p-2 rounded-full shadow-md hover:bg-gray-200">
                                    <i class="ri-add-line text-xl text-gray-700"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-details p-4">
                            <h3 class="text-xl font-semibold text-gray-800"><%= product.name %></h3>
                            <p class="text-lg text-gray-600 mt-2">₹ <%= product.price %></p>
                            <p class="text-sm text-gray-500 mt-2">Discount: <%= product.discount || 'N/A' %></p>
                        </div>
                        <div class="product-footer flex justify-between items-center p-4 bg-gray-100">
                            <a href="#" class="text-sm text-blue-600 hover:underline">View Details</a>
                            <a href="#" class="text-sm text-green-600 hover:underline">Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-gray-600">No products available at the moment.</p>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>





